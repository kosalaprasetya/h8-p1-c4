<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <title>This is homepage</title>
  </head>
  <body>
    <header class="bg-info">
      <nav class="navbar container">
        <div class="links">
          <a
            href="/"
            class="btn btn-primary"
          >
            Home
          </a>
          <a
            href="/labels"
            class="btn btn-primary"
          >
            Labels
          </a>
        </div>
        <div class="search">
          <form
            class="d-flex"
            role="search"
            action="/songs"
            method="get"
          >
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
              name="search"
            />
            <button
              class="btn btn-primary"
              type="submit"
            >
              Search
            </button>
          </form>
        </div>
      </nav>
    </header>
    <main class="container">
      <h1>Songs</h1>
      <div
        class="links"
        style="display: flex; justify-content: space-between"
      >
        <a
          href="/"
          class="btn btn-danger"
          >Return</a
        >

        <a
          href="/songs/add"
          class="btn btn-primary"
          >Add Song</a
        >
      </div>

      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Band Name</th>
            <th>Duration</th>
            <th>Genre</th>
            <th>Total Vote</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(element => { %>
          <tr>
            <td><%= element.id%></td>
            <td><%= element.title%></td>
            <td><%= element.bandName%></td>
            <td><%= element.duration%></td>
            <td><%= element.genre%></td>
            <td><%= element.totalVote%></td>
            <td>
              <a
                href="/songs/<%= element.id %>/delete"
                class="btn btn-danger"
                >Delete</a
              >
              <a
                href="/songs/<%= element.id %>/edit"
                class="btn btn-warning"
                >Edit</a
              >
              <a
                href="/songs/<%= element.id %>"
                class="btn btn-primary"
                >Read Song</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </main>
    <footer>footer</footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
