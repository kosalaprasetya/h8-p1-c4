<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <title>This is homepage</title>
  </head>
  <body>
    <header class="bg-info">
      <nav class="navbar container">
        <div class="links">
          <a
            href="/"
            class="btn btn-primary"
          >
            Home
          </a>
          <a
            href="/labels"
            class="btn btn-primary"
          >
            Labels
          </a>
        </div>
      </nav>
    </header>
    <main class="container">
      <h1>Add Songs</h1>
      <div class="errors">
        <% if (errors) { %> <% errors.forEach(element => { %>
        <p
          class="text-danger"
          style="font-weight: bold"
        >
          <%= element %>
        </p>
        <% }) %> <% } %>
      </div>
      <div
        class="links"
        style="display: flex; justify-content: space-between"
      >
        <a
          href="/"
          class="btn btn-danger"
          >Return</a
        >

        <a
          href="/songs"
          class="btn btn-primary"
          >Songs</a
        >
      </div>
      <form
        action="/songs/add"
        method="post"
      >
        <!-- 
      title, "bandName", duration, genre, lyric, "imageUrl", "LabelId", "createdDate" 
      -->
        <div class="mb-3">
          <label
            for="title"
            class="form-label"
            >Title</label
          >
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            placeholder="song name"
            required
          />
        </div>
        <div class="mb-3">
          <label
            for="bandName"
            class="form-label"
            >Band Name</label
          >
          <input
            type="text"
            class="form-control"
            id="bandName"
            placeholder="band name"
            name="bandName"
            required
          />
        </div>
        <div class="mb-3">
          <label
            for="duration"
            class="form-label"
            >Duration</label
          >
          <input
            type="text"
            class="form-control"
            id="duration"
            placeholder="song duration"
            name="duration"
            required
          />
        </div>
        <div class="mb-3">
          <div class="col-md-4">
            <label
              for="genre"
              class="form-label"
              >Genre</label
            >
            <select
              id="genre"
              class="form-select"
              name="genre"
            >
              <option
                selected
                disabled
              >
                Choose a genre
              </option>
              <option value="Jazz">Jazz</option>
              <option value="Dangdut">Dangdut</option>
              <option value="Hardcode">Hardcode</option>
              <option value="Rock">Rock</option>
              <option value="Pop">Pop</option>
              <option value="Other">Other</option>
            </select>
          </div>
        </div>
        <div class="mb-3">
          <label
            for="lyric"
            class="form-label"
            >Lyric</label
          >
          <input
            type="text"
            class="form-control"
            id="lyric"
            placeholder="song lyric"
            name="lyric"
            required
          />
        </div>
        <div class="mb-3">
          <label
            for="imageUrl"
            class="form-label"
            >Image URL</label
          >
          <input
            type="url"
            class="form-control"
            id="imageUrl"
            placeholder="image url"
            name="imageUrl"
          />
        </div>
        <div class="mb-3">
          <label
            for="LabelId"
            class="form-label"
            >Label Id</label
          >
          <select
            id="LabelId"
            class="form-select"
            name="LabelId"
          >
            <% labels.forEach(element => { %>
            <option value="<%= element.id %>"><%= element.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="mb-3">
          <label
            for="createdDate"
            class="form-label"
            >Created Date</label
          >
          <input
            type="date"
            class="form-control"
            id="createdDate"
            placeholder="label ID"
            name="createdDate"
            required
          />
        </div>
        <button
          type="submit"
          class="btn btn-primary"
        >
          Send
        </button>
        <button
          type="reset"
          class="btn btn-danger"
        >
          Reset
        </button>
      </form>
    </main>
    <footer>footer</footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
